extends ../layout 

block content 
  h1 Edit your artist 
  
  form(action='/artists/#{artist.id}' method='post')
    div.artist
      label(for="artist") Artist Name 
      input(type = 'text', value= artist.name, id="artist", name = "name")
      p
    div.painting
      label(for="painting") Artwork Name 
      input(type = 'text', value= artist.painting , id="painting", name = "painting")
      p
    div.medium
      label(for="medium") Artistic Media: 
      p
      select(id='medium', name='medium', type='medium')
        each val in media
          option(value= val selected= artist.medium === val ? true: undefined)= val
      p
    div.description
      label(for='description') Description of Artwork
      p
      textarea(id='description' name='description' value=artist.description rows='7' cols='50')= artist.description 
      p
    div.submit
      input(type='submit')
